body {
  background: black;
  color: white;
  font-size: 20px;
}

button.card-button {
  margin: 10px;
  color: white;
  border: none;
  font-size: 1.2em;
  transition: background 0.3s;
}
button.card-button.blue-team {
  background: blue;
}
button.card-button.blue-team:hover {
  color: blue;
  background: white;
}
button.card-button.red-team {
  background: red;
}